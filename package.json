{
    "name": "indenticator",
    "displayName": "Indenticator",
    "description": "Highlights the current indent depth of the cursor",
    "version": "0.0.1",
    "publisher": "sirtori",
    "engines": {
        "vscode": "^0.10.10"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Indenticator Configuration",
            "properties": {
                "indenticator.color.dark": {
                    "type": "string",
                    "default": "#888",
                    "description": "Color of the indent marker for dark themes"
                },
                "indenticator.color.light": {
                    "type": "string",
                    "default": "#999",
                    "description": "Color of the indent marker for light themes"
                },
                "indenticator.width": {
                    "type": "number",
                    "default": 1,
                    "description": "Width of the indent marker in pixels"
                },
                "indenticator.style": {
                    "type": "string",
                    "default": "solid",
                    "description": "Line style of the indent marker"
                },
                "indenticator.showCurrentDepthInStatusBar": {
                    "type": "boolean",
                    "default": true,
                    "description":
                        "Displays the current indent depth on the statusbar"
                }
            }
        }
    }
}